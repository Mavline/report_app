modules = ["nodejs-20", "web"]
run = "npm run build && npm run start"

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "static"
publicDir = "build"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx serve -s build -l 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
